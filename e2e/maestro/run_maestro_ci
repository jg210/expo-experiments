#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

SOURCE_DIR="$(readlink -f "$(dirname "${BASH_SOURCE[0]}")"/../..)"
. "${SOURCE_DIR}/.common.sh"
. "${SOURCE_DIR}/environment"

apk=app-release.apk
log "installing: ${apk}"
adb install "${apk}"
log "running maestro."
with_logcat logcat.txt scripts/run_maestro
log "done."
